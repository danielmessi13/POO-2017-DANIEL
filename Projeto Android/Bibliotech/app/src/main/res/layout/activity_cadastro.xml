<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0097A7"
    tools:context="com.example.wesleybrandolee.bibliotech.app.CadastroActivity">



    <ImageView

        android:id="@+id/img"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_perfil"
        android:onClick="mudar_foto"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true" />


    <EditText
        android:id="@+id/email_cadastro"
        android:layout_marginTop="20sp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/senha_cadastro"
        android:hint="Senha"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/comfirmar_senha_cadastro"
        android:hint="Repita a senha"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/apelido_cadastro"
        android:hint="Apelido"
        android:inputType="textCapWords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:text="@string/cadastrar"
        android:id="@+id/btn_entrar"
        android:onClick="efetuar_cadastro"
        android:backgroundTint="@color/button_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
